.basket-prev
	display flex
	flex-direction column

.basket-prev__icon
	margin-bottom 7px
	width 26px
	height 24px
	fill white
	@media screen and (max-width xl)
		margin-bottom 0


.basket-prev__title
	margin-bottom 2px
	font-size 16px
	line-height 20px
	font-weight bold
	@media screen and (max-width xl)
		display none

.basket-prev__count
	font-size 14px
	line-height 18px
	font-weight 500
	white-space nowrap
	color white
	@media screen and (max-width xl)
		display none
