.mobile-nav
	&__wrapper
		display none
		@media screen and (max-width: md)
			display block
		&.mobile-nav__wrapper--active
			.mobile-nav__content
				left 0
	&__content
		position fixed
		top 50px
		left -100%
		right 0
		bottom 0
		display flex
		flex-direction column
		width 100%
		color text-color
		background white
		z-index 3
		transition all .4s
	&__main
		flex 1
		padding 20px
		overflow auto
	&__callback
		margin-top auto
		padding 20px
		color white
		background main-shaft
	&__list
		& > *
			 margin 20px 0
			 &:first-child
					margin-top 0
	&__link
		display block
		font-size 16px
		line-height 1.63
	&-user-nav
		&__list
			& > *
				margin 20px 0
				&:first-child
						margin-top 0
		&__link
			display block
			font-size 16px
			line-height 1.63
			color eucaliptus
