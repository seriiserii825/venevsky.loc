.sandwitch
	// display none
	position relative
	width 32px
	height 20px
	cursor pointer

	&--active
		.sandwich line
			&--top
				top 10px
				transform rotate(45deg)


			&--middle
				opacity 0


			&--bottom
				top 10px
				transform rotate(-45deg)



	&__line
		position absolute
		left 0
		display block
		width 100%
		height 2px
		transition all linear .4s
		background-color white
	&--top
		top 0
