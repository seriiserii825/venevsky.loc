.popup.mfp-hide#js-popup-consultation
	.hide-on-succes
		header.popup__header
			span.popup__title Получить консультацию
			.popup-close
				+icon('popup-close__icon', 'close')
		.popup__body
			form.popup__form.form
				.form__body
					.form-line
						.form-group.form-group--width-m.form-group--required
							label.form-group__label Контактный телефон
							input.input(placeholder="+7(912)123-34-45" type="phone" name="phone")

					.form-line
						.form-group
							label.form-group__label Вопросы и ответы
							textarea.textarea-field(placeholder="Здравствуйте, меня интересует...")

					.form-line
						.form-group
							label.file-upload
								input(type="file")
								.file-upload__custom
									+icon('file-upload__icon', 'file')
									span.file-upload__text Загрузить

				.popup__footer
					.form-line
						.form-group.form-group--width-m
							input(type="submit" value="Поулучить консультацию").btn.btn-size-l
						span.form-line__info.form-line__info--color-green Ответим в течении 10 минут
					.form-line
						p.popup-info Задавая вопрос, вы соглашаетесь с <a href="" class="popup-info__link"> политикой конфиденциальности</a>

	.show-on-succes
		header.popup__header
			span.popup__title Мы вам перезвоним
			.popup-close
				+icon('popup-close__icon', 'close')
		.popup__body
			.form-success
				.form-success__block
					.form-success__info
						span.form-success__text Номер вашей заявки
						span.form-success__number 1234
					p.form-success__descr Менеджер позвонит на указанный телефон сегодня до 14:43 по московскому времени.

				.form-success__block
					span.popup__subtitle Не готовы ждать?
					.form-success__row
						.form-success__col
							.form-success-contacts
								+icon('form-success-contacts__icon', 'phone')

								span.form-success-contacts__text Звоните курглосуточно

								a(href="tel: +74993348888").link--green +7 499 334-88-88

								a(href="").form-success-contacts__link.link--underLine Набрать номер no QR коду

						.form-success__col
							.form-success-contacts
								+icon('form-success-contacts__icon', 'letter')

								span.form-success-contacts__text Напишите нам e-mail

								a(href="mailto:question@venevsky.ru").link--green question@venevsky.ru

		.fast-review
			form.form.fast-review-form
				span.popup__subtitle Насколько быстро вы нашли товар?
			.review-line__wrapper
				.review-line#js-review-line
				.review-line__inner#js-review-line__inner
					.review-line__item.review-line__item--left.review-line__item--active(data-fast-review="очень долго")
						.review-line__number 1
					.review-line__item.review-line__item--left(data-fast-review="долго")
						.review-line__number 2
					.review-line__item.review-line__item--center(data-fast-review="нормально")
						.review-line__number 3
					.review-line__item.review-line__item--right(data-fast-review="быстро")
						.review-line__number 4
					.review-line__item.review-line__item--right(data-fast-review="очень бьстро")
						.review-line__number 5

			.fast-review__line
				.form-group.form-group--width-l.fast-review__line-form-group
					input(type="text" placeholder="коментарий (необязательно)").input.input--width-s
					input(type="submit" value="отправить").btn.btn--size-l
